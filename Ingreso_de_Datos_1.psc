	Definir nombre Como Caracter;
	Definir edad Como Entero;
	Definir precio Como Real;
	
	//pedir datos al usuario
	Escribir "Ingrese su nombre...";
	Leer nombre;
	Escribir "ingrese su edad...";
	Leer edad;
	Escribir "Ingrese el precio...";
	Leer precio;
	
